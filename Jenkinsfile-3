pipeline {
    agent {
    docker { image 'node:9' }
    }
    
    stages{
        stage ("cloning") {
            steps{
                echo "cloning"
               sh "git clone https://github.com/monadevOp/the-example-app.nodejs.git"
            }
        }
        
        stage ("Install dependenciess"){
          steps{
               echo "installing dependencies"
                sh "npm i npm@latest -g"
                sh "cd the-example-app.nodejs && npm install"
           }
      }
        
        }
        
}
